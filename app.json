{
  "expo": {
    "name": "ECO-Guardian",
    "slug": "eco-guardian-app",
    "version": "1.0.0",
    "orientation": "portrait",
    // TODO: add icon PNG and update path
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      // TODO: add splash PNG and update path
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B4332"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ecoguardian.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for AR creature collection features.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to find nearby eco-friendly locations and spawn creatures.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to find nearby eco-friendly locations and spawn creatures."
      }
    },
    "android": {
      "adaptiveIcon": {
        // TODO: add adaptive icon and update path
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1B4332"
      },
      "package": "com.ecoguardian.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      // TODO: add favicon and update path
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-location",
      "expo-media-library",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share creature photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}